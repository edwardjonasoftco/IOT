const int waterPump = 7;
const int growLight = 6;
const int fanCooler = 5;

int moisture = 0;
int lightIntensity = 0;
int temperature = 0;

void setup()
{
  
  Serial.begin(9600);
  pinMode(A0, OUTPUT);
  pinMode(A1, INPUT);
  pinMode(A2, INPUT);
  pinMode(A3, INPUT);
  
  pinMode(waterPump, OUTPUT);
  pinMode(growLight, OUTPUT);
  pinMode(fanCooler, OUTPUT);
}

void loop()
{
  // Apply power to the soil moisture sensor
  digitalWrite(A0, HIGH);
  moisture = analogRead(A1);
  lightIntensity = analogRead(A2);
  temperature = analogRead(A3);
  // Turn off the sensor to reduce corrosion
  digitalWrite(A0, LOW);
  
  digitalWrite(waterPump, LOW);
  digitalWrite(growLight, LOW);
  digitalWrite(fanCooler, LOW);

  Serial.print("Moisture: "); Serial.print(moisture);
  Serial.print(" | Light Intensity: "); Serial.print(lightIntensity);
  Serial.print(" | Temperature: "); Serial.print(temperature);
  if moisture 
  
  delay(5000);
  
}
